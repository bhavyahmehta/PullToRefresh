<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="@color/white">


	<ImageView android:layout_width="wrap_content" android:id="@+id/imageView1"
		android:layout_height="wrap_content" android:src="@drawable/ic_launcher"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"></ImageView>
	
	<TextView android:layout_width="match_parent"
		android:textColor="@color/black" android:layout_height="wrap_content"
		android:text="@string/after_refresh" android:id="@+id/textView1"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="10dp"
		android:layout_centerVertical="true"></TextView>

</RelativeLayout>
